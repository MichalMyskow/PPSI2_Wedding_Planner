{% extends 'base.html.twig' %}
{% block style %} 
        {{ encore_entry_link_tags('auth') }}
{% endblock %}
{% block main %}
    <div class="main-margin-inline main-margin-block">
        <section>
            <div class="welcome-content">
                <div class="welcome-nav">
                    <h2 class="welcome-nav__current">Dodawanie koszt√≥w</h2>
                </div>
                <div class="main-form welcome-form">
                    {{ form_start(costForm) }}
                    {{ form_errors(costForm) }}
                    <div class="main-form__input-group">
                        {{ form_label(costForm.name, 'Nazwa', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(costForm.name, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(costForm.name) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(costForm.description, 'Opis', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(costForm.description, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(costForm.description) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(costForm.cost, 'Koszt', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(costForm.cost, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(costForm.cost) }}
                    </div>
                    <input type="submit" value="Dodaj koszt"  class="main-form__submit">
                    {{ form_end(costForm) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
