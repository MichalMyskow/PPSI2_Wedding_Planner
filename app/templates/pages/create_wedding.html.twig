{% extends 'layouts/app.html.twig' %}
{% block style %} 
        {{ encore_entry_link_tags('details') }}
{% endblock %}
{% block main %}
    <div class="main-margin-inline main-margin-block">
        <section>
            <div class="main-form__center-container">
                <section>
                    <div class="page-header">
                        <div class="page-header__content">
                            <h2>Tworzenie wesela</h2>
                        </div>
                    </div>
                </section>
                <div class="main-form welcome-form">
                    {{ form_start(weddingForm) }}
                    {{ form_errors(weddingForm) }}
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.brideFirstName, 'Imię panny młodej', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.brideFirstName, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(weddingForm.brideFirstName) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.brideLastName, 'Nazwisko panny młodej', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.brideLastName, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(weddingForm.brideLastName) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.groomFirstName, 'Imię pana młodego', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.groomFirstName, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(weddingForm.groomFirstName) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.groomLastName, 'Nazwisko pana młodego', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.groomLastName, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(weddingForm.groomLastName) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.date, 'Planowana data wesela', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.date, {'attr': {'class': 'main-form__select main-form__select--date'}}) }}
                        {{ form_errors(weddingForm.date) }}
                    </div>
                    <div class="main-form__input-group">
                        {{ form_label(weddingForm.room, 'Sala weselna', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(weddingForm.room, {'attr': {'class': 'main-form__select'}}) }}
                        {{ form_errors(weddingForm.room) }}
                    </div>
                    <input type="submit" value="Stwórz wesele"  class="main-form__submit">
                    {{ form_end(weddingForm) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block script %} 
        {{ encore_entry_script_tags('details') }}
{% endblock %}