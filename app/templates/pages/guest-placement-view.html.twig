{% extends 'base.html.twig' %}

{% block style %} 
        {{ encore_entry_link_tags('guest_placement_view') }}
{% endblock %}
{% block main %}
     <div class="main-margin-inline main-margin-block">
        <section>
            <div class="page-header">
                <div class="page-header__content page-header__content--view-guest-placement">
                    <h2>Podgląd miejsca</h2>
                </div>
            </div>
        </section>
        {% if guest.seatNumber %}
        <section>
            <div class="guest-placement__view">
                <div class="guest-placement__plan">
                    {% include roomView %}
                </div>
            </div>
        </section>
        {% else %}
            <section>
                <div class="guest-placement__view">
                    Jescze nie przypisano dla Ciebie miejsca, jeśli chcesz zobaczyć swoje miejsce później, zapisz link :)
                </div>
            </section>
        {% endif %}

    </div>
    <section>
        <div class="modal" id="loader"> 
            <div id="loader-content" class="modal-content">
                Ładowanie
            </div>
        </div>
    </section>
    <input type="hidden" id="viewing-guest-seat-id" value="{{ guest.seatNumber }}">
{% endblock %}
{% block script %} 
        {{ encore_entry_script_tags('guest_placement_view') }}
{% endblock %}
