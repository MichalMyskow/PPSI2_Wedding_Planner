{% extends 'base.html.twig' %}
{% block style %} 
        {{ encore_entry_link_tags('auth') }}
{% endblock %}
{% block main %}
    <div class="main-margin-inline main-margin-block">
        <section>
            <div class="welcome-content">
                <div class="welcome-nav">
                    <h2 class="welcome-nav__current">Dodawanie konfliktu</h2>
                </div>
                <div class="main-form welcome-form">
                    {{ form_start(guestConflictForm) }}
                    {{ form_errors(guestConflictForm) }}
                    <div class="main-form__input-group">
                        {{ form_label(guestConflictForm.conflictedGuests, 'Konflikty', {'label_attr': {'class': 'main-form__label'}}) }}
                        {{ form_widget(guestConflictForm.conflictedGuests, {'attr': {'class': 'main-form__input'}}) }}
                        {{ form_errors(guestConflictForm.conflictedGuests) }}
                    </div>
                    <input type="submit" value="Dodaj konflikty"  class="main-form__submit">
                    {{ form_end(guestConflictForm) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
